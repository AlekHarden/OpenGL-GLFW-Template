{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Compile",
			"command": "/bin/g++",
			"args": [
				"-g",
				"-o",
				"${workspaceFolder}/bin/gui.out",
				"${workspaceFolder}/src/*.cpp",
				"-I",
				"${workspaceFolder}/include",
				"-lglfw",
				"-lGL",
				"-lGLEW"
			],
			"windows": {
				"command": "C:\\MinGW\\bin\\g++.exe",
				"args": [
					"-g",
					"-o",
					"${workspaceFolder}\\bin\\gui.exe",
					"${workspaceFolder}\\src\\*.cpp",
					"-I",
					"${workspaceFolder}\\include",
					"-L",
					"${workspaceFolder}\\lib\\*",
					"-lglew32",
					"-lglfw3dll",
					"-lopengl32"
				]
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compile project"
		},
		{
			"type": "shell",
			"label": "Run",
			"command": "${workspaceFolder}/bin/gui.out",
			"windows": {
				"command": "${workspaceFolder}/bin/gui.exe"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "run project",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Compile"
			],
			"problemMatcher": []
		}
	]
}
