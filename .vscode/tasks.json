{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Windows",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				"-o",
				"${workspaceFolder}/bin/gui.exe",
				"${workspaceFolder}/src/*.cpp",
				"-I",
				"${workspaceFolder}/include",
				"-L",
				"${workspaceFolder}/lib/*",
				"-lmingw32",
				"-lglfw3",
				"-lgdi32",
				"-lopengl32"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": "build",
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "Linux",
			"command": "/bin/g++",
			"args": [
				"-g",
				"-o",
				"${workspaceFolder}/bin/gui",
				"${workspaceFolder}/src/*.cpp",
				"-I",
				"${workspaceFolder}/include",
				"-lglfw",
				"-lGL",
				"-lGLEW"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /bin/g++"
		}
	]
}
